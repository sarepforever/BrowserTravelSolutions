<div class="modal" tabindex="-1" id="modalLogin">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ingreso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @if (userInfo != null)
            {
                <EditForm Model="@userInfo" OnValidSubmit="Login">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <div class="modal-body">
                        <div class="row">
                            <div class="container">
                                <div class="mb-6">
                                    <label for="exampleFormControlInput1" class="form-label"><span style="color:gray">Correo Elecctronico</span></label>
                                    <input class="form-control form-control-sm" type="text" placeholder="correo Elecctronico" @bind="userInfo.email" >
                                    <ValidationMessage For="@(()=>userInfo.email)"></ValidationMessage>
                                </div>
                                <br />
                                <div class="mb-6">
                                    <label for="exampleFormControlInput1" class="form-label"><span style="color:gray">Contraseña</span></label>
                                    <input class="form-control form-control-sm" type="password" placeholder="contraseña"@bind="userInfo.Password"  >
                                    <ValidationMessage For="@(()=>userInfo.Password)"></ValidationMessage>
                                </div>
                                
                               
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (!userInfo.type)
                        {
                            <button type="submit" class="btn btn-success btn-sm">Registrarse</button>
                        }
                        @if (userInfo.type)
                        {
                            <button type="submit" class="btn btn-primary btn-sm">Ingresar</button>
                        }
                        
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>